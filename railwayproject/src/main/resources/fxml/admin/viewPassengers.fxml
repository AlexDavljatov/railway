                                <Person email="emma.jones@example.com" firstName="Emma" lastName="Jones"/>
                                <Person email="michael.brown@example.com" firstName="Michael" lastName="Brown"/>
                 -->
            </FXCollections>
        </items>
        <sortOrder>
            <fx:reference source="firstNameColumn"/>
        </sortOrder>
    </TableView>
