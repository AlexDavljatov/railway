            AnchorPane.rightAnchor="168.0"/>
    <Label fx:id="message" layoutX="56.0" layoutY="77.0" text="Please review your profile data."/>
    <Label layoutX="56.0" layoutY="123.0" text="Name:"/>
    <Label layoutX="56.0" layoutY="173.0" text="Surname:"/>
    <Label layoutX="56.0" layoutY="224.0" text="Email:"/>
