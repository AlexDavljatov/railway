               minWidth="215.0" prefHeight="30.0" prefWidth="215.0"/>
    <TextField fx:id="surname" layoutX="149.0" layoutY="171.0" maxWidth="2.0" minHeight="30.0" minWidth="215.0"
               prefHeight="30.0" prefWidth="215.0"/>
    <TextField fx:id="email" layoutX="149.0" layoutY="224.0" maxWidth="2.0" minHeight="30.0" minWidth="215.0"
               prefHeight="30.0" prefWidth="215.0"/>
    <PasswordField fx:id="password" layoutX="149.0" layoutY="273.0" prefWidth="126.0"/>

    <CheckBox fx:id="subscribed" layoutX="402.0" layoutY="120.0" text="Subscribed to NewsLetter"/>
    <Separator layoutX="380.0" layoutY="110.0" orientation="VERTICAL" prefHeight="155.0"/>
    <Hyperlink fx:id="logout" layoutY="24.0" onAction="#processLogout" text="logout" AnchorPane.rightAnchor="52.0"/>
